{
  "info": {
    "name": "FactuMarket API - Invoices Manager",
    "description": "Microservices API for Invoice Management with Clean Architecture",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "YOUR_API_KEY_HERE",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Get JWT Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', jsonData.token);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"api_key\": \"{{api_key}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "description": "Authenticate with API Key to receive JWT token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Clients",
      "item": [
        {
          "name": "List All Clients",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/clients",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "clients"]
            },
            "description": "Get list of all clients"
          },
          "response": []
        },
        {
          "name": "Create Client",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client\": {\n    \"company_name\": \"PanaderÃ­a Don Pedro\",\n    \"nit\": \"900123456-7\",\n    \"email\": \"contacto@panaderiadonpedro.com\",\n    \"address\": \"Calle 123 #45-67, BogotÃ¡\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/clients",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "clients"]
            },
            "description": "Create a new client in the system"
          },
          "response": []
        },
        {
          "name": "Get Client by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/clients/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "clients", "1"]
            },
            "description": "Retrieve a specific client by ID"
          },
          "response": []
        },
        {
          "name": "Search Client by NIT",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/clients/search_by_nit?nit=900123456-7",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "clients", "search_by_nit"],
              "query": [
                {
                  "key": "nit",
                  "value": "900123456-7"
                }
              ]
            },
            "description": "Search for a client by NIT (Tax ID)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Invoices",
      "item": [
        {
          "name": "Create Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_id\": 1,\n  \"amount\": 150000.50\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/invoices",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "invoices"]
            },
            "description": "Create a new invoice. Validates client existence and amount > 0"
          },
          "response": []
        }
      ]
    }
  ]
}
